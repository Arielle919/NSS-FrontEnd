table#todos
  thead
    tr
      th Completed
      th Title
      th Due Date
      th Priority
      th
  tbody
    each todo in todos
      tr(data-todo-id=todo.id, style='background-color:#{todo.priority.color}')
        td
          input.completed(type='checkbox', value=todo.completed, name='completed')
        td= todo.title
        td= moment(todo.dueDate).format('dddd, MMMM Do YYYY')
        td= todo.priority.name
        td
          form(action='/todos/#{todo.id}', method='post')
            input(type='hidden', name='_method', value='delete')
            button.tiny.radius.alert(type='submit') Delete