extends ../template/layout

block content
  .row
    .small-12.columns
      h1 Your POST!
  .row
    .small-2.columns
      a.button.small.radius.expand(href="/") Home
    .small-2.columns
      a.button.small.radius.expand(href="/posts") Post
    .small-2.columns
      a.button.small.radius.expand.success(href="/posts/new") New
    .small-6.columns
  .row
    .small-12.columns
      .post
        h1: a.button(href='/posts/#{post.id}')= post.title
        span= post.author
        span= post.date
        p= post.tags
        img(src=post.image)
        p= post.content