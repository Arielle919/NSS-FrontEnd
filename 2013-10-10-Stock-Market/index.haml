%head
  %meta{charset: "utf-8"}
  %meta{name: "viewport", content: "width=device-width"}
  %title Stock Market APP
  %link{rel: "stylesheet", href: "css/normalize.css"}
  %link{rel: "stylesheet", href: "css/foundation.css"}
  %link{rel: "stylesheet", href: "css/app.css"}
  %script{src: "js/vendor/custom.modernizr.js"}
%body
  .row
    .small-12.columns
    %h2 Stock Market App!
  .row
    .small-2.columns
      %input#symbol{type: 'text', placeholder: 'AAPL'}
    .small-2.columns
      %input#quantity{type: 'text', placeholder: '3'}
    .small-2.columns
      %input#buy.button.small.radius.success{type: 'button', value: 'BUY STOCKS'}
    .small-6.columns
  .row
    .small-3.columns
      %input#funds{type: 'text', placeholder: '1200'}
    .small-3.columns
      %input#addFunds.button.small.radius{type: 'button', value: 'SET'}
    .small-6.columns
  .row
    .small-6.columns
      %h4.subtitle
        Account
        #account
    .small-3.columns
      %input#updateInterval{type: 'text', placeholder: '.5'}
    .small-3.columns
      %input#setInterval.button.small.radius{type: 'button', value: 'SET'}
  .row
    .small-10.columns
      %h3 Stock List
    .small-2.columns
      %h4.subtitle
        Totals
        #totals
  .row
    .small-12.columns
      %table#table
        %tr
          %th Name
          %th Symbol
          %th Quote
          %th Purchased
          %th Current Price


  %script{src: 'js/vendor/jquery-1.10.2.js'}
  %script{src: 'js/vendor/foundation.min.js'}
  %script{src: 'js/vendor/underscore.js'}
  %script{src: 'js/vendor/moment.min.js'}
  %script{src: 'https://cdn.firebase.com/v0/firebase.js'}
  %script{src: 'js/app/app.js'}
