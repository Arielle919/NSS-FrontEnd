extends ../template/splash-page
include ../mixins/form-helper-appointment

block content
  .row
    .small-2.columns
      //- include todo-form
      h1 .
    .small-10.columns
      h1 Create Appointment
  .row
    .small-12.columns
      #the-application(class=user ? '' : 'hidden')
        form#appointment(action='/entry', method='post')
          fieldset
            legend
            .row
              mixin field(4, 'title', 'Title', null, null, true)
              mixin field(4, 'date', 'Date', null, null, false)
              .small-4.columns
            .row
              .small-12.columns
                label(for='content') Content
                textarea#content(name='content')
            .row
              .small-2.columns.small-offset-8: a.button.radius.alert.small.expand(href='/entry') Cancel
              .small-2.columns: button.radius.small.expand.alert(type='submit') Save Appointment


