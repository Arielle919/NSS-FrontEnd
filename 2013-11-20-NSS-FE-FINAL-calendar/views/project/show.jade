extends ../template/splash-page
include ../mixins/form-helper
include ../mixins/form-helper-appointment

block content
  .row
    .small-12.columns
      h1 Add Checklist
      a(href='/project').button.expand.radius.alert Projects
  .row
  #the-application(class=user ? '' : 'hidden')
    .small-12.columns
      #projects
        .project
          h1.title= project.title
          span Start Time:
          span.time= project.startTime + "     "
          span End Time:
          span.time= project.endTime
          p .
          span Start Date:
          span.date= project.startDate + "     "
          span End Date:
          span.date= project.endDate
          p .
          h6 Description
          h5.content= project.content
          form(action='/project/#{project.id}', method='post')
                input(type='hidden', name='_method', value='delete')
                button.tiny.radius.alert(type='submit') Delete
          p .
          a.button.tiny.radius.alert(href='/project/#{project.id}/edit') Edit





