extends ../template/splash-page
include ../mixins/form-helper

block content
  .row
    .small-12.columns
      h1 Your Appointments
      a(href='/project/new').button.expand.radius.alert Create Appointment
  .row
    .small-12.columns
      #projects
        each project in projects
          .project
            h1.title= project.title
            span.titles Start Time:
            span.time= project.startTime + "     "
            span.titles ---
            span.time= project.endTime
            p .
            span.titles Start Date:
            span.date= project.startDate + "     "
            span.titles ---
            span.date= project.endDate
            p .
            h4.titles Description:
            p.content= project.content
            .small-6.columns
              a.button.tiny.radius.expand.alert(href='/project/#{project.id}/edit') Edit
            .small-6.columns
              form(action='/project/#{project.id}', method='post')
                    input(type='hidden', name='_method', value='delete')
                    button.tiny.radius.alert.expand(type='submit') Delete



