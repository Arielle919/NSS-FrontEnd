#the-application(class=user ? '' : 'hidden')
  h1 Edit Appointment
  form(action='/entry/#{appointment.isNew ? "" : appointment.id}', method='post')
    if !appointment.isNew
      input(type='hidden', name='_method', value='put')
    fieldset
      legend
      .row
        mixin field(4, 'title', 'Title', appointment.title, null, true)
        mixin field(4, 'date', 'Date', appointment.date, null, false)
        mixin field(4, 'time', 'Time', appointment.time, null, false)
      .row
        .small-12.columns
          label(value=appointment.content) Content
          textarea#content(name='content')=appointment.content
      .row
        .small-2.columns.small-offset-8: a.button.radius.alert.small.expand(href='/entry') Cancel
        .small-2.columns: button.radius.success.small.expand(type='submit') Save Changes