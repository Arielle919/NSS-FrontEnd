extends ../template/splash-page
include ../mixins/form-helper

block content
  .row
    .small-12.columns
      h1 Your Bills
      a(href='/financial/new').button.expand.radius.alert Create Bill
  .row
    .small-12.columns
      #bills
        each financial in financials
          .bills
            h3.title= financial.title
            span.titles Amount Due:
            span.amount= financial.Amount
            span.titles Amount Paid:
            span.amount= financial.AmountPaid
            span.titles DueDate:
            span.time= financial.DueDate
            span.titles Date Paid:
            span.time= financial.DatePaid
            span.titles Balance:
            span.balance= financial.Balance
            .small-6.columns
              form(action='/financial/#{financial.id}', method='post')
                    input(type='hidden', name='_method', value='delete')
                    button.tiny.expand.radius.alert.marginb10(type='submit') Delete
            .small-6.columns
              a.button.tiny.expand.radius.alert.marginb10(href='/financial/#{financial.id}/edit') Edit



