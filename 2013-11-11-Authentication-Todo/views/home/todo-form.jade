form#todo(action='/todos', method='post')
  fieldset
    legend ToDo
    .row
      mixin field(4, 'text', 'title', 'Title')
      mixin field(4, 'text', 'category', 'Category')
      mixin field(4, 'text', 'dueDate', 'Due Date')
    .row
      .small-2.columns: button#new-todo.radius.small.expand Create
      .small-2.columns: a.button.radius.small.expand(href='/admin') Admins
      .small-8.columns
