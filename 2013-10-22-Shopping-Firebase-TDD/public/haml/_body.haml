.row
  .small-2.columns
    %input#product-image{type: 'text', placeholder: 'image.png'}
  .small-2.columns
    %input#product-name{type: 'text', placeholder: 'name'}
  .small-2.columns
    %input#product-weight{type: 'text', placeholder: 'weight'}
  .small-2.columns
    %input#product-price{type: 'text', placeholder: '$3.30'}
  .small-2.columns
    %input#product-off{type: 'text', placeholder: '14%'}
  .small-2.columns
    %input#add-product.small.radius.button{type: 'button', value: 'Add Product'}
.row
  .small-12.columns
    %table#products
      %tr
        %th Image
        %th Name
        %th Weight
        %th Price
        %th % Off
        %th Sale
.row
  .small-12.columns
    %input#previous.hidden.small.button{type: 'button', value:'previous'}
    %input#next.hidden.small.button{type: 'button', value:'next'}
.row
  .small-2.columns
    %input#customer-image{type: 'text', placeholder: 'image.png'}
  .small-2.columns
    %input#customer-name{type: 'text', placeholder: 'Your Name'}
  .small-6.columns
    %input#domestic{type: 'radio', name: 'address', value: 'domestic' } Domestic
    %input#international{type: 'radio', name: 'address', value: 'international' }   International
  .small-2.columns
    %input#add-customer.button.small.radius.success{type: 'button', value: 'add customer'}
.row
  .small-3.columns
    %select#select-customer
  .small-7.columns
    %table#cart
      %tr
        %th Name
        %th Count
        %th Amount
        %th Weight
        %th Shipping
        %th Total
  .small-2.columns
    %input#purchase.button.small.radius.success{type:'button', value:'Purchase'}