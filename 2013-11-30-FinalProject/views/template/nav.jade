.contain-to-grid.fixed
  nav.top-bar
    ul.title-area
      li.name
        h1: a(href="/")
      li.toggle-topbar.menu-icon
        a(href="#")
          span Menu

    section.top-bar-section
      ul.left
          li: a(href="/entry"): img.logo(src="../images/keep-up-logo-solid.jpg")
          li: a(href="/entry") Home
          li: a(href="/contact") Contacts
          li: a(href="/projects") Projects
          li: a(href="/task") Checklist
          li: a(href="#") Timer
          li: a(href="#") Network
      ul.right
        li.divider
        if user
          li.has-form: a#authentication-button.button.radius.success(href="#", data-email=user.email)= 'LOGOUT'
        else
          li.has-form: a#authentication-button.button.radius.alert(href="/", data-email="anonymous") Login | Sign Up